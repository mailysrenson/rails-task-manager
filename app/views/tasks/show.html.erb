<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed == true %> 
    <p>Task completed</p>
  <% else %>
    <p>Task not completed yet</p>
  <%end%>

  <%= link_to "Edit task", edittask_path(@task.id) %>
  
  <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

  <%= link_to "Back to list", tasks_path %>

